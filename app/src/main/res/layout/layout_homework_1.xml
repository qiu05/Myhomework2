<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:text="播放"
        android:id="@+id/hm_1_start"
        android:onClick="hm_1_start"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="暂停"
        android:id="@+id/hm_1_pause"
        android:onClick="hm_1_pause"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="停止"
        android:id="@+id/hm_1_stop"
        android:onClick="hm_1_stop"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="停止服务"
        android:id="@+id/hm_1_stopservice"
        android:onClick="hm_1_stopservice"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="绑定"
        android:id="@+id/hm_1_bind"
        android:onClick="bindClick"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="BIND播放"
        android:id="@+id/hm_1_bindstart"
        android:onClick="bindClick"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="BIND暂停"
        android:id="@+id/hm_1_bindpause"
        android:onClick="bindClick"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="BIND停止"
        android:id="@+id/hm_1_bindstop"
        android:onClick="bindClick"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="解绑"
        android:id="@+id/hm_1_unbind"
        android:onClick="bindClick"
        android:layout_height="wrap_content" />
</LinearLayout>


